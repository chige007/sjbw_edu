#toolbar_studentList
    .btn-group(role='group')
        button.btn.btn-default(type='button', onclick="window.location.href='/?tab=/student'") 
            span.glyphicon.glyphicon-plus
            | 新增
        //- button.btn.btn-default(type='button') 
        //-     span.glyphicon.glyphicon-remove
        //-     | 批量删除
        button.btn.btn-default(type='button', onclick="$('#studentList').bootstrapTable('refresh');$('#toolbar_studentList .searchBar')[0].reset()")
            span.glyphicon.glyphicon-repeat
            | 刷新
    form.searchBar.form-inline
        .form-group
            label 所属网站
            select.form-control(name="website_belong", value="")
                option(value="", selected="selected") 全部
                option(value="zhongguo") 中国中等教育学生信息网
                option(value="hainan") 海南中等教育学生信息网
        .form-group
            label 姓名
            input.form-control(type='text', placeholder='请填写', name='name')
        .form-group
            label 证书编号
            input.form-control(type='text', placeholder='请填写', name='certificate_num')
        //- .form-group
        //-     label(for='exampleInputEmail2') 毕业时间
        //-     input#exampleInputEmail2.form-control(type='date', placeholder='请选择', name='graduation_date')
        button.searchBtn.btn.btn-primary(type='button') 查询

table#studentList
#modal_student_check.modal.bs-example-modal-lg.fade(tabindex='-1', role='dialog')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h4.modal-title 学籍信息
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span.glyphicon.glyphicon-remove(aria-hidden='true')
            .modal-body
            .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') 关闭

#modal_student_update.modal.bs-example-modal-lg.fade(tabindex='-1', role='dialog')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h4.modal-title 学籍信息
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span.glyphicon.glyphicon-remove(aria-hidden='true')
            .modal-body
            
#modal_student_report.modal.bs-example-modal-lg.fade(tabindex='-1', role='dialog')
    .modal-dialog.modal-lg(role='document')
        .modal-content
            .modal-header
                h4.modal-title 认证报告
                button.close(type='button', data-dismiss='modal', aria-label='Close')
                    span.glyphicon.glyphicon-remove(aria-hidden='true')
            .modal-body
                iframe#iframe_student_report(src='', frameborder='0', width='100%', height='100%', name='iframe_student_report')
            .modal-footer
                button.btn.btn-danger.download(type='button')
                    span.glyphicon.glyphicon-save
                    | 下载PDF
                button.btn.btn-primary.print(type='button', disabled='disabled')
                    span.glyphicon.glyphicon-print(style='vertical-align: -2px; font-size: 15px;')
                    | 打印报告
                button.btn.btn-primary.printQrcode(type='button', disabled='disabled')
                    span.glyphicon.glyphicon-print(style='vertical-align: -2px; font-size: 15px;')
                    | 打印二维码
                button.btn.btn-default(type='button', data-dismiss='modal') 关闭
form#form_student_print(action='/student/print', method='post', style='display: none', target='iframe_student_report')
    input(type='hidden', name='_id')
script(src='/javascripts/studentManager.js' type='text/javascript')